# Firebase config
FIREBASE_API_KEY=your-api-key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your-sender-id
FIREBASE_APP_ID=your-app-id

# Firebase Admin SDK
FIREBASE_ADMIN_SERVICE_ACCOUNT_PATH=/absolute/path/to/serviceAccountKey.json

# Stripe (for payment processing)
STRIPE_SECRET_KEY=sk_test_your_test_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_test_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# App URLs
NEXT_PUBLIC_APP_URL=http://localhost:9002
NEXTAUTH_URL=http://localhost:9002

# Email config (for production)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=your-email@example.com
EMAIL_PASS=your-email-password
EMAIL_FROM=RentalSpot <bookings@example.com>
EMAIL_SECURE=false

# Twilio (for SMS notifications)
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# For Stripe test webhook forwarding (using stripe-cli)
# stripe listen --forward-to localhost:9002/api/webhooks/stripe